<section>
  <article>
    <h4>Import Participants</h4>
    <%= form_tag import_participants_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import Tickets" %>
    <% end %>

    <%= form_tag import_guests_participants_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import Guests" %>
    <% end %>

    <br>

    <h1>Current Participants</h1>

    <table>
      <thead>
      <tr class="participants">
        <th>Particpant id</th>
        <th>Lname</th>
        <th>Fname</th>
        <th>Tuple date</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @participants.each do |participant| %>
          <tr>
            <td><%= participant.id %></td>
            <td><%= participant.lname %></td>
            <td><%= participant.fname %></td>
            <td><%= participant.created_at %></td>
            <td><%= link_to 'Show', participant %></td>

          </tr>
      <% end %>
      </tbody>
    </table>
  </article>
</section>
